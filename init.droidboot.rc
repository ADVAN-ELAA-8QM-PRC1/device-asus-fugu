on early-init
    start ueventd

on init
    export PATH /sbin:/system/sbin:/system/bin:/system/xbin
    export ANDROID_ROOT /system
    export ANDROID_DATA /data

    symlink /system/etc /etc

    start partlink
    wait /dev/block/platform/intel/by-label/data 1

    mount /tmp /tmp tmpfs
    mount /data /data tmpfs

    write /proc/sys/kernel/panic_on_oops 1

    # set usb serial number
    write /sys/class/android_usb/android0/iSerial ${ro.serialno}

    chown system system /usr/bin/ia_watchdogd
    chmod 0750 /usr/bin/ia_watchdogd

on fs
     mkdir /dev/usb-ffs 0770 shell shell
     mkdir /dev/usb-ffs/adb 0770 shell shell
     mount functionfs adb /dev/usb-ffs/adb uid=2000,gid=2000
     write /sys/class/android_usb/android0/f_ffs/aliases adb

on boot
    ifup lo
    hostname localhost
    domainname localdomain
    # USB settings to allow charging, but not to be declare as Fastboot Device
    setprop sys.usb.config charging
    class_start default
    class_start core

on property:sys.usb.config=adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 8087
    write /sys/class/android_usb/android0/idProduct 09ef
    write /sys/class/android_usb/android0/iProduct "Android-Phone"
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

on property:sys.usb.config=mass_storage
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 8087
    write /sys/class/android_usb/android0/idProduct 09f1
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

# USB ACM configuration, with rndis and adb
on property:sys.usb.config=rndis,acm,adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 8087
    write /sys/class/android_usb/android0/idProduct 09f8
    write /sys/class/android_usb/android0/iProduct "Android-Phone"
    write /sys/class/android_usb/android0/f_acm/instances 1
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

on property:sys.usb.config=mass_storage,adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 8087
    write /sys/class/android_usb/android0/idProduct 09f2
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

on property:sys.usb.config=mtp,adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 18d1
    write /sys/class/android_usb/android0/idProduct Fec0
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

on property:sys.usb.config=ptp,adb
    write /sys/class/android_usb/android0/enable 0
    write /sys/class/android_usb/android0/idVendor 18d1
    write /sys/class/android_usb/android0/idProduct Fec0
    write /sys/class/android_usb/android0/functions ${sys.usb.config}
    write /sys/class/android_usb/android0/enable 1

on property:persist.service.apklogfs.enable=1
    start apk_logfs

on property:persist.service.apklogfs.enable=0
    stop apk_logfs

on property:sys.partitioning=1
    stop apk_logfs

on property:sys.powerctl=*
    powerctl ${sys.powerctl}

on property:sys.partitioning=0
    mkdir /logs
    mkdir /factory 0775 system system
    mkdir /config 0775 system system
    wait /config
    chown system system /logs
    chmod 777 /logs
    mount_all /fstab.recovery
    mkdir /logs/flashing
    write /logs/flashing/blankphone_file ""
    start apk_logfs
    start partlink

on property:sys.forcecoldboot=yes
    write /sys/module/intel_mid/parameters/force_cold_boot 1

# Reset the watchdog counter once boot is completed
on property:sys.boot_completed=1
    write /sys/devices/virtual/misc/watchdog/counter "0"

on property:init.svc.droidboot=running
    write /sys/devices/virtual/misc/watchdog/counter "0"

on property:init.svc.charger_app=running
    write /sys/devices/virtual/misc/watchdog/counter "0"

on property:init.svc.recovery=running
    write /sys/devices/virtual/misc/watchdog/counter "0"

service ueventd /sbin/ueventd
    critical

service droidboot /system/bin/droidboot
    critical

service console /system/bin/sh
    console

service apk_logfs /system/bin/logcat -b system -b main -b radio -b kernel -n 20 -r5000 -v threadtime -f /logs/aplog
    disabled

service partlink /sbin/partlink
    oneshot

service watchdogd /usr/bin/ia_watchdogd
    class core
    user system
    group system
    oneshot

